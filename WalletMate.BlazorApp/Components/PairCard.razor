@namespace WalletMate.BlazorApp.Components

<div id="Cadre" @onclick="Clicked">
    <img src="@Icon" alt="image"/>
    <h3 id="name">@Name</h3>
</div>


@code {

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public string Icon { get; set; } = "Images/man.jpg";

    [Parameter]
    public string Name { get; set; } = "Bob LEPONGE";

    private void Clicked()
    {
        Console.WriteLine("coucou");
    }

}

 <style>

    #Cadre {
        width: 50%; 
        height: 50%;
        min-width: 300px;
        border-radius: 10px;
        background: #F7F7F7; 
        border: solid #BDBDBD 0; 
        box-shadow: 0 5px 7px rgba(0, 0, 0, 0.2)  ; 
        -webkit-box-shadow: 0 5px 7px rgba(0, 0, 0, 0.2); 
        -moz-box-shadow: 0 5px 7px rgba(0, 0, 0, 0.2);
        display: grid;
        grid-template-rows: 150px 30px;
    }

    #Cadre > img {
        border-radius: 50%;
        justify-self: center;
        grid-row: 1;
        margin-top: 10px;
    }

    #name {
        text-align: center;
        grid-row: 2;
    }

</style>
